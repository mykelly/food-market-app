<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6">

        <com.food.market.widget.viewflow.HomeViewFlow
            android:id="@+id/home_exchange_viewflow"
            android:layout_width="505dp"
            android:layout_height="206dp"
            android:layout_centerHorizontal="true"
            android:fadingEdge="none"
            android:unselectedAlpha="1"
            app:sidebuffer="7"/>

        <com.food.market.widget.viewflow.CircleFlowIndicator
            android:id="@+id/dfhome_ad_indicator"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_alignBottom="@id/home_exchange_viewflow"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            app:activeColor="#fff"
            app:activeType="fill"
            app:circleSeparation="10dp"
            app:inactiveColor="#d3d3d3"
            app:inactiveType="fill"
            app:radius="2.4dp"/>

    </RelativeLayout>

</LinearLayout>
